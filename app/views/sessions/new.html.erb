<%= render 'shared/content_title', title: 'Log in' %>

<div>
  <%= form_tag '/login' do %>
    <div class='control-group'>
      <%=label_tag :username %>
      <%=text_field_tag :username %>
    </div>
    <div class='control-group'>
      <%=label_tag :password %>
      <%=password_field_tag :password %>
    </div>
    <div class='control-group'>
      <%=submit_tag 'Log in', class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
